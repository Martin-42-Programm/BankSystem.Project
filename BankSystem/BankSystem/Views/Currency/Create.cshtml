@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Create New Currency</title>
</head>

<body>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow rounded">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Create New Currency</h3>
                </div>

                <div class="card-body">
                    <form method="post" asp-action="Create" asp-controller="Currency">
                        <div class="mb-3">
                            <label for="currency" class="form-label fw-bold">Currency Name:</label>
                            <input type="text" name="currency" id="currency" class="form-control" placeholder="e.g., USD" required />
                        </div>

                        <div class="mb-3">
                            <label for="exchangeRate" class="form-label fw-bold">Exchange Rate:</label>
                            <input type="text" name="exchangeRate" id="exchangeRate" class="form-control" placeholder="e.g., 1.9594" required />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success w-100">Create</button>
                        </div>
                    </form>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="card-footer">
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
</body>

</html>

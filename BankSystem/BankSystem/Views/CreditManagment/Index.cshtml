@model IEnumerable<BankSystem.Data.Entities.Credit>

<h2>Pending Credit Requests</h2>

<table class="table">
    <thead>
    <tr>
        <th>User</th>
        <th>Amount</th>
        <th>Request Date</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Count() != 0)
    {
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.User.Email</td>
                <td>@request.RequestedAmount</td>
                <td>@request.DesiredRepaymentTerm</td>
                <td>
                    <form asp-action="Approve" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@request.Id"/>
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                    <form asp-action="Reject" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@request.Id"/>
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
    }
    else
    {
        <h1>Nonsdnvs</h1>
    }
    
    </tbody>
</table>
@model BankSystem.ServiceModels.OfficeServiceModel

@{
    ViewData["Title"] = "Office Details";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <tbody>
    <tr>
        <th>Address</th>
        <td>@Model.Address</td>
    </tr>
    <tr>
        <th>Postcode</th>
        <td>@Model.Postcode</td>
    </tr>
    <tr>
        <th>City</th>
        <td>@Model.City</td>
    </tr>
    <tr>
        <th>Country</th>
        <td>@Model.Country</td>
    </tr>
    </tbody>
</table>

<a href="@Url.Action("Edit", "Office", new { address = Model.Address })" class="btn btn-warning">Edit Office</a>
<a href="@Url.Action("List", "Office")" class="btn btn-secondary">Back to List</a>
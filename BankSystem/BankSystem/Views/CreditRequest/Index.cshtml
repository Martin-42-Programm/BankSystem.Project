@page
@model Credit

<h2>Request Credit</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.RequestedAmount"></label>
        <input asp-for="@Model.RequestedAmount" class="form-control" />
        <span asp-validation-for="@Model.RequestedAmount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
